  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: url('{{ '/fonts/inter-v12-latin-regular.woff2' | url }}') format('woff2'),
       url('{{ '/fonts/inter-v12-latin-regular.woff' | url }}') format('woff');
}

