<article>
      <header class="border-bottom pb-4 mb-4">

        <h1 class="display-6">{{ title }} </h1>

      </header>
      <p class="lead">
        {{ summary }}
      </p>
      
      <!-- Cover Image -->
      {% if coverImg %}
      <div class="mb-4">
        {% if coverImg | slice(0, 7) == "http://" or coverImg | slice(0, 8) == "https://" %}
          <img src="{{ coverImg }}" alt="{{ title }}" class="img-fluid rounded shadow-sm" style="width: 100%; height: 400px; object-fit: cover;">
        {% else %}
          <img src="{{ coverImg | url }}" alt="{{ title }}" class="img-fluid rounded shadow-sm" style="width: 100%; height: 400px; object-fit: cover;">
        {% endif %}
      </div>
      {% endif %}
      
      {{ content | safe }}
    </article>
